<!--this is the view for the '/todo' URL, which is referenced in
the todoController.js handler, 'app.get('/todo', function(){});'-->

<html>
    <head>
        <title>Todo List</title>
        <!--add jquery to use AJAX requests-->
        <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
        <script src="/assets/todo-list.js"></script>
        <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <h1>My Todo List</h1>
        <div id="todo-table">
            <form>
                <input type="text" name="item" placeholder="Add new item..." required  />
                <button type="submit">Add Item</button>
            </form>
            <ul>
                <!--cycle through each item in the data array from todoController.js-->
                <% for(var i=0; i < todos.length; i++){ %>
                     <!--output each item to the view-->
                    <li><%= todos[i].item %></li>
                <% } %>
            </ul>
        </div>
    </body>
</html>
